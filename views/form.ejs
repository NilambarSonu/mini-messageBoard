<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/formStyles.css">
    <title>New message</title>
</head>
<body class="flex">
    <form name='submit-to-google-sheet' class="form-body" action="/new" method="post">
        <div class="enter-name">Enter Your Name ğŸ‘‡:</div>
        <input name="Name" class="name-box" type="text" id="name" placeholder="Ex: Mike">

        <div class="enter-name">Provide Your Email ğŸ‘‡:</div>
        <input name="Email" type="email" class="email-box" placeholder="test@gmail.com">

        <div class="write-message">Write Your Message Here ğŸ‘‡:</div>
        <textarea class="padding" name="Message" id="message" rows="4" cols="80" placeholder="Hii Developer i am Nolan."></textarea>
        <div class="flex">
            <button class="button1 padding1" onclick="alert('Message has been recorded successfully! Our Team Will Contact You Soon.')" type="submit">Submit</button>
            <button class="button2 padding2" type="reset">Clear</button>
        </div>
    </form>

    <script>
  const scriptURL = 'https://script.google.com/macros/s/AKfycbzJTJ_3Bk3pvv11BAybEmNTdNLAC10c9U5jUMHjK-xJLNrSw6Y8CBY74YFBmLTRUnVH/exec'
  const form = document.forms['submit-to-google-sheet']

  form.addEventListener('submit', e => {
    e.preventDefault()
    fetch(scriptURL, { method: 'POST', body: new FormData(form)})
      .then(response => {
        console.log('Success!', response);
        window.location.href = '/'; // Redirect to index.ejs (assuming it's served at '/')
      })
      .catch(error => console.error('Error!', error.message))
  })
</script>
</body>
</html>